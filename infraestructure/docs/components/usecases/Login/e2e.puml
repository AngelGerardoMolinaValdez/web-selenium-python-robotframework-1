@startuml LOGIN_E2E
rectangle "Login" {
    :Open Browser;
    :Go To [Url]; <<input>>
    partition "Login Page" {
        :Enter [Username]; <<input>>
        :Enter [Password]; <<input>>
        :Add Info To Report;
        :Click On "Login";
        if (Is Home Page Visible?) then (YES)
            :Add Pass To Report;
            #palegreen:Use Case Has Been Completed;
        else (NO)
            :Add Error To Report;
            #pink:Use Case Has Failed;
            stop
        endif
    }
}
@enduml 